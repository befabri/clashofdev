{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
     "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": "src",
    "paths": {
        "@assets/*": ["assets/*"],
        "@config": ["config.ts"],
        "@components/*": ["components/*"],
        "@content/*": ["content/*"],
        "@layouts/*": ["layouts/*"],
        "@pages/*": ["pages/*"],
        "@styles/*": ["styles/*"],
        "@lib/*": ["lib/*"],
        "@utils/*": ["utils/*"],
        "@types": ["types/index.ts"]
    }, 
},
"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
}