---
import CharacterCards from "@components/CharacterCards.astro";
import CrownCard from "@components/CrownCard.astro";
import LandingTitle from "@components/LandingTitle.astro";
import CTACard from "@components/ui/CTACard.astro";
import Marquee from "@components/ui/Marquee.astro";
import LandingLayout from "@layouts/LandingLayout.astro";
---

<LandingLayout title="Clash of Dev">
    <div class="w-full flex flex-col pb-[60px] pt-[225px]">
        <div class="flex flex-col px-8 lg:flex-row gap-14 lg:gap-4 mx-auto max-w-screen-2xl w-full">
            <div class="flex flex-row justify-between w-full h-full items-center gap-4">
                <LandingTitle class="justify-start relative" />
                <CrownCard class="h-full w-full flex justify-end flex-1 pr-14" />
            </div>
        </div>
        <div class="flex pt-[136px]">
            <Marquee />
        </div>
        <div class="flex flex-col px-8 mx-auto max-w-screen-2xl min-h-screen pt-[100px]">
            <CharacterCards />
            <CTACard />
        </div>
    </div>
</LandingLayout>
