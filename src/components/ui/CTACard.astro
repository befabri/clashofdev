---
import Button from "./Button.astro";
import { Icon } from "astro-icon/components";
---

<div
    class="h-[900px] rounded-[60px] flex flex-col px-[87px] py-[80px] relative overflow-hidden bg-cod_black dark:bg-cod_black justify-between">
    <div class="flex flex-col justify-center pr-[30px] pt-[140px] relative">
        <p class="text-xs font-semibold text-cod_white dark:text-cod_white">/ FINALE02</p>
        <div class="flex items-center justify-center h-[372px]">
            <h3 class="font-semibold text-[115px] leading-[123px] text-beige dark:text-cod_white text-justify">
                Click Me ? Might enter the finals
            </h3>
        </div>
        <div class="w-[54px] h-[54px] flex items-center justify-center absolute bottom-[50.3px] right-[143.48px]">
            <Icon class="w-[53.55px] h-[49.56px] text-purple_light dark:text-purple_light/90" name="footprint" />
        </div>
    </div>
    <div class="flex justify-center h-full pt-[146px]">
        <div class="relative h-full flex">
            <Button href="https://bfabri.me" class="relative z-20">Enter Next Level</Button>
            <div
                class="w-[30px] h-[30px] bg-green_mid dark:bg-green_dark rounded-full flex items-center justify-center absolute top-[-14px] left-[-7px] z-30">
                <Icon class="w-[12px] h-[12px] text-green_light dark:text-green_light/60" name="star" />
            </div>
            <div
                class="w-[38px] h-[38px] bg-blue_dark rounded-full flex items-center justify-center absolute bottom-[-19.38px] right-[12.62px] z-30">
                <Icon class="w-[16px] h-[16px] text-blue_light dark:text-blue_light/90" name="lightning" />
            </div>
            <div
                class="w-[64px] h-[64px] bg-pink_mid dark:bg-pink_dark rounded-full flex items-center justify-center absolute top-[-39.18px] right-[-19.22px] z-10">
                <Icon
                    class="w-[28px] h-[28px] text-pink_light dark:text-pink_light/60 rotate-[37.05deg]"
                    name="balise"
                />
            </div>
        </div>
    </div>
</div>
